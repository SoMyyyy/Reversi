@model IEnumerable<ReversiMVCApplication.Models.UserRoleViewModel>

@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>

<table class="table">
    <thead>
        <tr>
            <th>User Name</th>
            <th>Roles</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.UserName</td>
            <td>@string.Join(", ", item.Roles)</td>
            <td>
                <form asp-action="ChangeRole" asp-controller="Admin" method="post">
                    <input type="hidden" name="userId" value="@item.UserId" />
                    <select name="role">
                        @foreach (var role in item.AllRoles)
                        {
                            <option value="@role">@role</option>
                        }
                    </select>
                    <input type="submit" value="Change Role" />
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>